<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Ad</th>
      <th>Soyad</th>
      <th>Fakulte</th>
      <th>Bolum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.ad %></td>
        <td><%= blog.soyad %></td>
        <td><%= blog.fakulte %></td>
        <td><%= blog.bolum %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

